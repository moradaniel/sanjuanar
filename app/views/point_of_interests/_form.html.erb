<%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=true" %>


<script language="javascript">

    var map;
    var marker = null;

    function on_load()
    {

    var lat = "-31.537167100975058";
    var lng = "-68.52523148059845";


    <% if !@pointOfInterest.id.nil? %>
        <%#var lat = <%= @pointOfInterest.lat %>;
        <%#var lng = <%= @pointOfInterest.lng %>;

        set_map_and_addons(lat,lng);

    <% else %>
       <%# centers the map on a city %>

       set_map_and_addons(lat,lng);

   <%end %>

        set_listeners();

    }

    function set_listeners()
    {

        google.maps.event.addListener(marker, 'drag', function(event) {

            var lat = event.latLng.lat();
            var lng = event.latLng.lng();

            document.getElementById('poi_lat').value = lat;
            document.getElementById('poi_lng').value = lng;

        });

        google.maps.event.addListener(map, 'click', function(event){
            document.getElementById('poi_lat').value = event.latLng.lat();
            document.getElementById('poi_lng').value = event.latLng.lng();

            if (marker == null)
            {
                marker = new google.maps.Marker({
                    position: new google.maps.LatLng(event.latLng.lat(), event.latLng.lng()),
                    map: map,
                    title:"Point of Interest"
                });
            }
            else
            {
                marker.setPosition( new google.maps.LatLng(event.latLng.lat(),event.latLng.lng()));
            }

        });

    }

    function set_map_and_addons(lat,lng)
    {
        map= new google.maps.Map(document.getElementById('map_canvas'), {
            center: new google.maps.LatLng(lat,lng),
            zoom: 17,
            mapTypeId: google.maps.MapTypeId.HYBRID,
            disableDefaultUI: false
        });

        marker = new google.maps.Marker({
            position: new google.maps.LatLng(lat, lng),
            map: map,
            title: "Point of Interest",
            draggable: true
        });

        document.getElementById('poi_lat').value = lat;
        document.getElementById('poi_lng').value = lng;
    }

    <%# Resets the map to the new selected city %>
    function city_change(sel)
    {

        <%# Get the location of the selected city %>
        var location = sel.options[sel.selectedIndex].value.split(",");
        var lat = parseFloat(location[0]);
        var lng = parseFloat(location[1]);

        set_map_and_addons(lat,lng);
        set_listeners();
    }

    $(document).ready(function(){

        on_load();

    });

</script>



<%= form_for(@pointOfInterest) do |f| %>
    <%= f.error_messages %>
<p>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
</p>

    <!-- Holds Poi's location -->
    <input type="text" id="poi_lat"  name="poi[lat]" HIDDEN></input>
    <input type="text" id="poi_lng" name="poi[lng]" HIDDEN></input>


    <!-- Map canvas -->
    <div style=" width:50%; height:50%; float:right">
      <div id="map_canvas" style="align: center; width:330px; height:390px"></div>
    </div>

<%= f.submit %>
<% end %>

